<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/screen_confirmation2"
        tools:context=".ui.scentaware.CheckPointActivity">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_round_corner_background"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textview.MaterialTextView
                style="@style/text_view_new"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_32dp"
                android:layout_marginEnd="@dimen/_16dp"
                android:fontFamily="@font/ws_light"
                android:gravity="center"
                android:text="@string/you_ve_successfully_signed_up_with_sensifyaware"
                android:textSize="@dimen/_19sp" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/text_view_new"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_16dp"
                android:layout_marginEnd="@dimen/_16dp"
                android:fontFamily="@font/ws_light"
                android:gravity="center"
                android:text="@string/effective_care_starts" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirmation"
                style="@style/button_style_dark"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_32dp"
                android:layout_marginEnd="@dimen/_16dp"
                android:layout_marginBottom="@dimen/extraLargeMargin"
                android:backgroundTint="@color/them_color"
                android:text="@string/get_started"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>